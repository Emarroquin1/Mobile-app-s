<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityMundos">

    <Button
        android:id="@+id/buttonMundo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mundo 1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonMundo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mundo 2"
        app:layout_constraintStart_toEndOf="@id/buttonMundo1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonMundo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mundo 3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonMundo1" />

    <Button
        android:id="@+id/buttonMundo4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mundo 4"
        app:layout_constraintStart_toEndOf="@id/buttonMundo3"
        app:layout_constraintTop_toBottomOf="@id/buttonMundo2" />

    <TextView
        android:id="@+id/textViewDificultad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dificultad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonMundo3" />

</androidx.constraintlayout.widget.ConstraintLayout>
